- unless params[:with_role].blank?
  - title "#{User.with_role(params[:with_role]).count} #{params[:with_role].titleize.pluralize}"
- else
  - title "#{User.count} Users"

%ul{:class => "scope horizontal"}
  - User::ROLES.each do |role|
    %li= link_to role.titleize.pluralize, params.merge(:with_role => role)
  %li= link_to "All", params.merge(:with_role => "")    # or link_to "All" admin_users_path

= will_paginate @users
= form_tag edit_multiple_admin_users_path do
  %ul.users
    - @users.each do |user|
      %li.user{:id => "user_#{user.nds}"}
        %ul.horizontal
          %li=user.name
          %li=user.email
          %li=user.nds
          %li=user.roles.join(" ").titleize
          - if user.sheet
            %li=link_to "Sheet", sheet_path(user.sheet)
          %li= check_box_tag "user_ids[]", user.id, false, :id => "edit"
          %li= link_to "Edit", edit_admin_user_path(user)
  = submit_tag "Edit Checked"

