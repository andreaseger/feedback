-if @sheets
  %ul#sheets
    - for sheet in @sheets
      %li.sheet
        %ul.horizontal
          %li.semester
            = sheet.semester.text
          %li.company
            %strong= sheet.company
        %ul.controls
          %li= link_to t('sheets.wshow'), sheet
          - if can? :update, sheet
            %li= link_to t('sheets.wedit'), edit_sheet_path(sheet)
          - if can? :destroy, sheet
            %li= link_to t('sheets.wdestroy'), sheet, :confirm => t('sheets.wsure'), :method => :delete
        %p= sheet.note_general.truncate(150)

