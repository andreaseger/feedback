- title t('.title')

%ul#sheet
  %li
    %em=@sheet.user.name
  %li=@sheet.semester.long_text
  %li=@sheet.company
  %li
    %strong
      =t 'sheets.app_address'
    %ul.address
      %li=@sheet.application_address.street
      %li
        =@sheet.application_address.post_code
        =@sheet.application_address.city
      %li=@sheet.application_address.country
  %li
    %strong
      =t 'sheets.job_address'
  %ul.address
    %li=@sheet.job_site_address.street
    %li
      =@sheet.job_site_address.post_code
      =@sheet.job_site_address.city
    %li=@sheet.job_site_address.country
  %li
    %strong
      = t 'sheets.dept'
    =@sheet.department
  %li
    %strong
      = t 'sheets.boss'
    =@sheet.boss
  %li
    %strong
      = t 'sheets.handler'
    =@sheet.handler
  %li
    %p=@sheet.note_company
  %br
  %li
    %strong
      = t 'sheets.length'
    =@sheet.internship_length
  %li
    %strong
      = t 'sheets.extendable'
    =@sheet.extendable
  %li
    %strong
      = t 'sheets.vacation'
    =@sheet.vacation
  %li
    %strong
      = t 'sheets.release'
    =@sheet.release
  %li
    %strong
      = t 'sheets.hours'
    =@sheet.working_hours
  %li
    -if @sheet.flextime?
      = t 'sheets.flextime'
    -else
      = t 'sheets.fixed_time'
  %li
    %strong
      = t 'sheets.salary'
    =@sheet.salary
  %li
    %strong
      = t 'sheets.languages'
    =@sheet.required_languages
  %li
    %strong
      = t 'sheets.reachability'
    =@sheet.reachability
  %li
    %strong
      = t 'sheets.accessability'
    =@sheet.accessability
  %li
    %p=@sheet.note_conditions
  %br
  %li
    %strong
      = t 'sheets.per_women'
    =@sheet.percentage_of_women
  %li
    %strong
      = t 'sheets.atmo'
    =@sheet.working_atmosphere
  %li
    %strong
      = t 'sheets.satisfaction_with_support'
    =@sheet.satisfaction_with_support
  %li
    %strong
      = t 'sheets.stress'
    =@sheet.stress_factor
  %li
    %strong
      = t 'sheets.apartment_market'
    =@sheet.apartment_market
  %li
    %strong
      = t 'sheets.satisfaction_with_internship'
    =@sheet.satisfaction_with_internship
  %li
    %p=@sheet.note_personal_impression
  %br
  %li
    -if @sheet.big_project?
      = t 'sheets.big_project'
    -else
      = t 'sheets.small_project'
  %li
    %strong
      = t 'sheets.teamsize'
    =@sheet.teamsize
  %li
    %strong
      = t 'sheets.independent_work'
    =@sheet.independent_work
  %li
    %strong
      = t 'sheets.reference_to_the_study'
    =@sheet.reference_to_the_study
  %li
    %strong
      = t 'sheets.learning_effect'
    =@sheet.learning_effect
  %li
    %strong
      = t 'sheets.required_previous_knowledge'
    =@sheet.required_previous_knowledge
  %br
  %li
    %p=@sheet.note_project
  %li
    %p=@sheet.note_general



%ul.controls
  - if can? :update, @sheet
    %li= link_to t('sheets.wedit'), edit_sheet_path(@sheet)
  - if can? :destroy, @sheet
    %li= link_to t('sheets.wdestroy'), @sheet, :confirm => t('sheets.wsure'), :method => :delete
  %li= link_to t('sheets.wviewall'), sheets_path

